<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="start" childLayout="center" controller="bpv.laemcasa.Main">            
          <layer id="foreground"  childLayout="center" height="100%" width="100%">
              <panel   childLayout="vertical" width="60%" height="50%">
                  <panel id="panel_top" height="10%" width="75%" align="center" childLayout="center"
                         backgroundColor="#5555">  
                         <text text="Servidor La em Casa..." font="Interface/Fonts/Default.fnt" width="100%" height="100%" />
                  </panel>
                  <panel height="35%" align="center" width="75%" childLayout="center" backgroundColor="#5555">
                      <panel childLayout="vertical"  height="25%" align="center" > 
                          <panel id="panel_mid" width="75%" align="center" childLayout="horizontal" > 
                                <text text="Servidor: " font="Interface/Fonts/Default.fnt" width="50%"/>
                                <control id="host" name="textfield" text="127.0.0.1" width="50%"/>
                          </panel>
                          <panel id="panel_mid" width="75%" align="center" childLayout="horizontal" > 
                               <text text="Porta: " font="Interface/Fonts/Default.fnt" width="50%"/>
                               <control id="porta" name="textfield" text="5555" width="50%"/>
                          </panel>
                          <panel id="panel_mid" width="75%" align="center" childLayout="horizontal" > 
                                <control id="resultado" name="label" text="" width="100%"/>                                  
                          </panel>
                      </panel>
                  </panel>
                  <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal"
                     backgroundColor="#5555">  
                      <panel id="panel_bottom_left" height="25%" width="50%" valign="center" childLayout="center">  
                            <control name="button" label="Conectar" id="StartButton" align="center" valign="center"> 
                                <interact onClick="conectarPorDadosMenu()"/>
                            </control>
                      </panel>
                      <panel id="panel_bottom_right" height="25%" width="50%" valign="center" childLayout="center">  
                            <control name="button" label="Sair" id="QuitButton" align="center" valign="center"> 
                                <interact onClick="quitGame()"/>
                            </control>
                      </panel>
                  </panel>
             </panel>
        </layer>
    </screen>
    <screen id="hud" childLayout="center" controller="bpv.laemcasa.Main">
        <layer id="cockpit"  childLayout="center" height="100%" width="100%">
            <image filename="Interface/cockpit4.gif" width="100%" height="100%"/>
        </layer>
    </screen>
    <screen id="hudAtirando" childLayout="center" controller="bpv.laemcasa.Main">
        <layer id="cockpitAtirando"  childLayout="center" height="100%" width="100%">
            <image filename="Interface/cockpitAtirando.png" width="100%" height="100%"/>
        </layer>
    </screen>
    <screen id="vazio" childLayout="center" controller="bpv.laemcasa.Main"></screen>
</nifty>